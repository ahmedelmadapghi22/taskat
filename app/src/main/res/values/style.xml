<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/_3sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_2sdp</item>
    </style>
    <style name="TaskTextView" parent="TitleTextView">

        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/gray</item>

    </style>

    <style name="EditTextLayout">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/_3sdp</item>
        <item name="android:layout_marginEnd">@dimen/_3sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>

    </style>

    <style name="ContentTextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginEnd">@dimen/_3sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <style name="DateEditText">
        <item name="android:background">@drawable/date_background</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:inputType">number</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginStart">@dimen/_3sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="NoDataStyle">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppCompatButton">
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/app_compat_button_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
</resources>